{
  "paths": {
    "manifest": {
      "source": "src/manifest.json",
      "dist": "www/manifest.json"
    },
    "index": {
      "app": {
        "source": "src/index.html",
        "dest": "www/"
      },
      "web": {
        "source": "src/index.html",
        "dest": "../teleflik"
      }
    },
    "scripts": {
      "source": {
        "root": "src/scripts",
        "files": [
          "src/scripts/**/*.js",
          "!src/scripts/env.js",
          "!src/scripts/metrics.js"
        ]
      },
      "spec": {
        "root": "spec",
        "files": "spec/**/*-spec.js",
        "config": "karma.conf.js"
      },
      "vendor": {
        "files": [
          "node_modules/ionic/js/ionic.bundle.min.js",
          "node_modules/angular-resource/angular-resource.min.js"
        ]
      },
      "dist": {
        "bundle": "www/scripts/bundle.min.js",
        "vendor": {
          "root": "www/vendor/scripts",
          "bundle": "www/vendor/scripts/vendor.min.js"
        }
      }
    },
    "styles": {
      "source": {
        "files": "src/styles/**/*.styl"
      },
      "vendor": {
        "files": [
          "node_modules/ionic/css/ionic.min.css"
        ]
      },
      "dist": {
        "root": "www/styles",
        "bundle": "www/styles/bundle.min.css",
        "vendor": {
          "root": "www/vendor/styles",
          "bundle": "www/vendor/styles/vendor.min.css"
        }
      }
    },
    "images": {
      "source": {
        "root": "src/images",
        "files": "**/*.{svg,png,jpg,gif}"
      },
      "dist": {
        "root": "www/images"
      }
    },
    "fonts": {
      "source": {
        "files": "src/fonts/**/*.*"
      },
      "vendor": {
        "files": [
          "node_modules/ionic/fonts/**/*.*"
        ]
      },
      "dist": {
        "root": "www/fonts",
        "vendor": {
          "root": "www/vendor/fonts"
        }
      }
    },
    "templates": {
      "source": {
        "root": "src/scripts",
        "files": "src/scripts/**/*.html"
      },
      "dist": {
        "bundle": "www/templates/templates.js",
        "moduleName": "templates"
      }
    },
    "worker": {
      "source": "src/service-worker.js",
      "dist": "www/service-worker.js"
    },
    "config": {
      "source": {
        "files": [
          "project.json",
          "package.json",
          "ionic.config.json",
          "gruntfile.js"
        ]
      }
    }
  },
  "server": {
    "dev": {
      "port": 9000,
      "host": "0.0.0.0",
      "showDir": true,
      "autoIndex": true,
      "ext": "html",
      "runInBackground": true
    }
  }
}