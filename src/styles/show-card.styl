@require '_variables'
@require '_mixins'

.show-card-interest-container
  color $color-grey
  font-size $font-size-xs

.show-card-interest-related
  font-weight bold

.show-card-interest-container,
.show-card-details-container
  margin-top 10px

.show-card-details-container
  position relative
  clearfix()
  .icon
    position relative
    top 1px
    margin 0 2px
    font-size $font-size-sm

.show-card-details-item
  float left
  & + .show-card-details-item
    &:not(.show-card-details-item-media)
      margin-left 15px
  &.show-card-details-item-media
    position: absolute
    top 0
    padding-left 120px
    width 100%
    text-align right
    box-sizing(border-box)
    .show-card-details-item-text,
    .icon
      float right
    .show-card-details-item-text
      padding-right 25px
      max-width 85%
      text-transform uppercase
      text-overflow ellipsis
      overflow hidden
      white-space nowrap
      cursor pointer
      box-sizing(border-box)
    .icon
      position absolute
      top 0
      right 0
      font-size $font-size-md

.show-card-details-item-text
  font-size $font-size-xxs
